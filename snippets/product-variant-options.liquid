{% comment %}
  Renders product variant options with subscription pricing information

  Accepts:
  - product: {Object} product object.
  - option: {Object} current product_option object.
  - block: {Object} block object.
  - picker_type: {String} type of picker to display

  Usage:
  {% render 'product-variant-options',
    product: product,
    option: option,
    block: block
    picker_type: picker_type
  %}
{% endcomment %}

<div class="main_choose_offer">
{%- liquid
  assign product_form_id = 'product-form-' | append: section.id
-%}

{%- for value in option.values -%}
  {%- liquid
    assign swatch_focal_point = null
    if value.swatch.image
      assign image_url = value.swatch.image | image_url: width: 50
      assign swatch_value = 'url(' | append: image_url | append: ')'
      assign swatch_focal_point = value.swatch.image.presentation.focal_point
    elsif value.swatch.color
      assign swatch_value = 'rgb(' | append: value.swatch.color.rgb | append: ')'
    else
      assign swatch_value = null
    endif

    assign option_disabled = true
    if value.available
      assign option_disabled = false
    endif
  -%}

  {%- capture input_id -%}
    {{ section.id }}-{{ option.position }}-{{ forloop.index0 -}}
  {%- endcapture -%}

  {%- capture input_name -%}
    options[{{ option.name | escape }}]
  {%- endcapture -%}

  {%- capture input_dataset -%}
    data-product-url="{{ value.product_url }}"
    data-option-value-id="{{ value.id }}"
  {%- endcapture -%}

  {%- capture label_unavailable -%}
    <span class="visually-hidden label-unavailable">
      {{- 'products.product.variant_sold_out_or_unavailable' | t -}}
    </span>
  {%- endcapture -%}

  {%- if picker_type == 'swatch' -%}
    {%- capture help_text -%}
      <span class="visually-hidden">{{ value | escape }}</span>
      {{ label_unavailable }}
    {%- endcapture -%}
    {%
      render 'swatch-input',
      id: input_id,
      name: input_name,
      value: value | escape,
      swatch: value.swatch,
      product_form_id: product_form_id,
      checked: value.selected,
      visually_disabled: option_disabled,
      shape: block.settings.swatch_shape,
      help_text: help_text,
      additional_props: input_dataset
    %}
  {%- elsif picker_type == 'button' -%}
 
   
      {%- comment -%} Get the variant for this option value {%- endcomment -%}
        {% assign variant = product.variants | where: 'title', value | first %}

        {% if variant %}
          {%- comment -%} Get all selling plans for this variant {%- endcomment -%}
          {% assign all_plans = variant.selling_plan_allocations %}
          {% assign total_plans = all_plans.size %}
          
          {%- comment -%} Calculate which plan to show based on variant index {%- endcomment -%}
          {% assign variant_index = forloop.index0 %}
          {% assign display_plan = null %}
          
          {% if total_plans > 0 %}
            {% comment %} Cycle through plans based on variant index {% endcomment %}
            {% assign plan_index = variant_index | modulo: total_plans %}
            {% assign display_plan = all_plans[plan_index] %}
          {% endif %}

          {%- comment -%} Set display values {%- endcomment -%}
          {% assign frequency_time = "One-time purchase" %}
          {% assign plan_price = variant.price | money %}
          {% assign plan_compare_at_price = variant.compare_at_price | money | default: variant.price | money %}
          {% assign discount_percent = 0 %}
          
          {% if display_plan %}
            {% assign plan = display_plan.selling_plan %}
            {% assign frequency_time = plan.name %}
            {% assign plan_price = display_plan.price | money %}
            {% assign plan_compare_at_price = display_plan.compare_at_price | default: variant.compare_at_price | default: variant.price | money %}
            
            {% for price_adjustment in plan.price_adjustments %}
              {% if price_adjustment.value_type == 'percentage' %}
                {% assign discount_percent = price_adjustment.value %}
              {% endif %}
            {% endfor %}
          {% endif %}

          <div class="choose_an_offer_box" 
             
              discount_percent="{{ discount_percent }}"
              total_plans="{{ total_plans }}"
              data-available="{{ variant.available }}">
            
            <input
              type="radio"
              id="{{ input_id }}"
              data-plan-id="{{ plan.id }}"
              data-variant-id="{{ variant.id }}"
              frequency_time="{{ frequency_time }}"
              plan_price="{{ plan_price }}"
              plan_compare_at_price="{{ plan_compare_at_price }}"
              name="{{ input_name }}"
              value="{{ variant.id }}"  
              {% comment %} value="{{ value | escape }}" {% endcomment %}
              form="{{ product_form_id }}"
              {% if value.selected %}checked{% endif %}
         
              {{ input_dataset }}
              class="variant-option-input"
              data-variant-id="{{ variant.id }}"
            >

            <label for="{{ input_id }}" class="variant-option-label">
              {% if variant.featured_image %}
                <img src="{{ variant.featured_image | img_url: '100x' }}" alt="{{ value | escape }}" class="variant-image"width="auto" height="auto">
              {% endif %}
            </label>
            {% if plan_price !=blank %}
              <div class="varinat_price">
                <p>{{ plan_price }} </p>
                {% comment %} <span class="price-compare">{{ plan_compare_at_price }}</span> {% endcomment %}
            </div>
            {% endif %}
          </div>
        {% endif %}

  {%- elsif picker_type == 'dropdown' or picker_type == 'swatch_dropdown' -%}
    <option
      id="{{ input_id }}"
      value="{{ value | escape }}"
      {% if value.selected %}
        selected="selected"
      {% endif %}
      {% if swatch_value and picker_type == 'swatch_dropdown' %}
        data-option-swatch-value="{{ swatch_value }}"
        {% if swatch_focal_point %}
          data-option-swatch-focal-point="{{ swatch_focal_point }}"
        {% endif %}
      {% endif %}
      {{ input_dataset }}
    >
      {% if option_disabled -%}
        {{- 'products.product.value_unavailable' | t: option_value: value -}}
      {%- else -%}
        {{- value -}}
      {%- endif %}
    </option>
  {%- endif -%}
{%- endfor -%}
</div>


